<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="14dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="26dp">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="#95EBF6"
            android:padding="8dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/player_image"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:src="@drawable/red_hoodie"
                    android:layout_gravity="center_horizontal" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/player_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Player Name"
                android:textSize="26sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btn_zoom"
                android:layout_width="60dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:background="#D6EDFB"
                android:contentDescription="more"
                android:src="@drawable/baseline_double_arrow_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/country_club_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/country_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/player_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Country"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/club_icon"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_marginStart="16dp"
                        android:src="@drawable/ic_launcher_background" />

                    <TextView
                        android:id="@+id/player_club"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Club"
                        android:textSize="18sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/player_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Age: 28"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/player_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp"
                    android:text="Position: Forward"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/player_stats_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Career Stats"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/career_stats_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/player_games_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games: 200"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/player_goals_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals: 80"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/player_assists_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assists: 50"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/player_stats_season_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:text="Season Stats"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/season_stats_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/player_games_season"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Games: 30"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/player_goals_season"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Goals: 10"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/player_assists_season"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Assists: 8"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
